{
	"name": "futures-keepers",
	"version": "1.0.0",
	"main": "src/index.js",
	"license": "MIT",
	"scripts": {
		"start": "pm2 start ecosystem.config.js",
		"start-mainnet": "pm2 start ecosystem.config.js --only futures-keeper-mainnet",
		"start-goerli": "pm2 start ecosystem.config.js --only futures-keeper-goerli",
		"dev": "name=futures-keeper-goerli ts-node-dev --respawn --transpile-only src/index.ts run",
		"dev-mainnet": "name=futures-keeper-mainnet ts-node-dev --respawn --transpile-only src/index.ts run",
		"build": "tsc && cp .env build/ && cp .env.staging build/",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"postinstall": "patch-package",
		"test": "jest",
		"check-types": "tsc --noEmit",
		"upgrade-synthetix": "npm i @synthetixio/contracts-interface@latest @synthetixio/wei@latest synthetix@latest"
	},
	"engines": {
		"node": ">=10.0.0"
	},
	"dependencies": {
		"@aws-sdk/client-cloudwatch-logs": "3.72.0",
		"@ethersproject/abstract-provider": "5.5.1",
		"@ethersproject/experimental": "5.6.0",
		"@synthetixio/contracts-interface": "2.74.3",
		"@synthetixio/wei": "2.74.2",
		"chalk": "4.1.1",
		"commander": "9.0.0",
		"dotenv": "10.0.0",
		"eslint": "7.6.0",
		"eslint-config-prettier": "3.6.0",
		"eslint-config-standard": "12.0.0",
		"eslint-plugin-havven": "1.1.0",
		"eslint-plugin-import": "2.22.0",
		"eslint-plugin-no-only-tests": "2.4.0",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-prettier": "2.6.2",
		"eslint-plugin-promise": "4.3.1",
		"eslint-plugin-standard": "4.0.0",
		"ethers": "5.5.4",
		"express": "4.17.1",
		"lodash": "4.17.21",
		"log-process-errors": "6.3.0",
		"patch-package": "6.4.7",
		"pm2": "5.1.2",
		"prettier": "1.19.1",
		"pretty-error": "3.0.4",
		"prom-client": "14.0.0",
		"synthetix": "2.76.1",
		"typescript": "4.5.2",
		"winston": "3.7.2",
		"winston-cloudwatch": "4.0.1"
	},
	"devDependencies": {
		"@nomiclabs/hardhat-ethers": "2.0.4",
		"@nomiclabs/hardhat-truffle5": "2.0.3",
		"@types/chai": "4.3.0",
		"@types/commander": "2.12.2",
		"@types/dotenv": "8.2.0",
		"@types/express": "4.17.13",
		"@types/jest": "27.0.3",
		"@types/lodash": "4.14.177",
		"@types/log-process-errors": "6.3.1",
		"@types/mocha": "9.1.0",
		"@types/node": "16.11.12",
		"chai": "4.3.6",
		"hardhat": "2.8.2",
		"jest": "27.4.3",
		"ts-jest": "27.1.1",
		"ts-node-dev": "1.1.8"
	}
}
